
<%# Flash error if not passing validation %>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <%= error %>
  <% end  %>
<% end  %>


<%= form_for @student do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%=  f.label :mod %>
  <%= f.number_field :mod, within: [1..5] %>
  <br>
  <%= f.submit %>
<% end %>