<h1>Edit an artist information</h1>

<form action="/artists/<%= @artist.id %>" method="POST">
<input type="hidden" name="_method" value="PATCH" >
  <label for="artist_name">Artist Name</label>
  <input id="artist_name" name="artist[name]" type="text" placeholder="<%= @artist.name %>" value="<%= @artist.name %>"><br>
  <label for="artist_age">Artist Age</label>
  <input id="artist_age" name="artist[age]" type="number" placeholder="<%= @artist.age %>" value="<%= @artist.age %> "><br>
  <label for="artist_bio">Artist Bio</label>
  <input id="artist_bio" name="artist[bio]" type="text" placeholder="<%= @artist.bio %>" value="<%= @artist.bio %>"><br>
  <input type="submit" value="Submit">
</form>